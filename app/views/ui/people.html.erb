<section class="people">
  <header>
    <h2>People I Follow</h2>
  </header>
  <table class="table">
    <thead>
      <tr>
        <th width="30%"></th>
        <th width="20%">Videos in Queue</th>
        <th width="20%">Followers</th>
        <th width="30%">Unfollow</th>
      </tr>
    </thead>
    <tbody>
      <% 5.times do %>
        <tr>
          <td>
            <img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest('knwang@gmail.com'.downcase) %>?s=40" alt="" />
            <%= link_to "Kevin Wang" %>
          </td>
          <td class="extra-padding">20</td>
          <td class="extra-padding">30</td>
          <td class="extra-padding">
            <%= link_to "", method: :post do %>
              <i class="icon-remove"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
