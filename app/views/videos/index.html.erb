<% @categories.each do |category| %>
  <article class="video_category">
    <header>
      <h3><%= link_to category.name, "#" %></h3>
    </header>
    <div class="videos row">
      <% category.videos.each do |video| %>
        <div class="video span2">
          <%= link_to image_tag(video.small_cover_url), video %>
        </div>
      <% end %>
    </div>
  </article>
<% end %>
