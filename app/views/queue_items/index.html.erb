<section class="my_queue container">
  <div class="row">
    <div class="span10 offset1">
      <article>
        <header>
          <h2>My Queue</h2>
        </header>
        <table class="table">
          <thead>
            <tr>
              <th width="10%">List Order</th>
              <th width="30%">Video Title</th>
              <th width="10%">Play</th>
              <th width="20%">Rating</th>
              <th width="15%">Genre</th>
              <th width="15%">Remove</th>
            </tr>
          </thead>
          <tbody>
            <% @queue_items.each do |queue_item| %>
              <tr>
                <td><%= queue_item.position %></td>
                <td><%= link_to queue_item.video_title, queue_item.video %></td>
                <td><%= button_to "Play", nil, class: "btn" %></td>
                <td><%= pluralize(queue_item.rating, "Star") if queue_item.rating %></td>
                <td><%= link_to queue_item.category_name, queue_item.category %></td>
                <td>
                  <%= link_to queue_item, method: :delete do %>
                    <i class="icon-remove"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= button_to "Update Instant Queue", nil, class: "btn" %>
      </article>
    </div>
  </div>
</section>
